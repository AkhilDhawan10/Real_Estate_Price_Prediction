# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
# REQUIRED: Set your MongoDB connection string
# Local: mongodb://localhost:27017/property-broker
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/property-broker
MONGODB_URI=mongodb://localhost:27017/property-broker

# JWT Configuration - CRITICAL: CHANGE THESE IN PRODUCTION
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHAR_STRING
JWT_REFRESH_EXPIRES_IN=30d

# Razorpay Configuration
# Get your keys from https://dashboard.razorpay.com/app/keys
# Use test mode keys for development
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Admin Configuration
ADMIN_EMAIL=admin@propertybroker.com
ADMIN_PASSWORD=change_this_admin_password
ADMIN_PHONE=+911234567890

# CORS Configuration (comma-separated list of allowed origins)
# Add your production frontend URL here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
